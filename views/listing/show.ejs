<% layout("./layout/Biolerplate.ejs") %>
    <%- include("../includes/flash.ejs") %>



    <div class="row mt-3">
        <div class="col-8 offset-lg-3 offset-sm-2 offset-3">
            <h1><%= list.title %></h1>
        </div>
        <div class="col-8 offset-lg-3 offset-sm-2 offset-3 mb-3">
          <form to="/Reserve">
            <button class="btn btn-primary">Reserve</button>
          </form>
        </div>

        <div class="col-8 offset-lg-2 offset-sm-2 offset-3">
            <div>
                <img  src="<%= list.image.url %>" class="card-img-top">
            </div>
            
            <p class="card-text"><i>Owned By :<%= list.owner.username %></i></p><br>
            <p class="card-text"><%= list.description %></p>
            <p class="card-text">	&#8377;<%= list.price.toLocaleString("en-IN") %></p>
            <p class="card-text"><%= list.location %></p>
            <p class="card-text"><%= list.country %></p>

            <form>
            </form>
        </div>

        <% if(currUser && list.owner._id.equals(currUser._id)) { %>
        <div class="btns col-8 offset-lg-2 offset-sm-2 offset-3 mb-4 ">
       
        <a href="/listings/<%= list.id %>/edit"
            class="btn link-btns btn-dark">Edit</a>
         
       
        <form action="/listings/<%= list.id %>?_method=DELETE" method="post">
            <button  class="btn btn-dark">Delete</button>
        </form>
        
      </div>

      <% } %>

    </div>

    <% if(currUser) { %>
    <div class="row mt-3">
        <div class="col-8 offset-lg-2 offset-sm-2 offset-3">
            <form method="post" action="/listings/<%= list.id %>/Review" class="needs-validation" novalidate>

                <div class="mb-3">
                    
                    <fieldset class="starability-slot">
                        <legend>First rating:</legend>
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                      </fieldset>

                </div> 

                <div class="mb-3">
                  <label for="comment" class="form-label">comment</label>
                  <textarea required type="text" name="review[comment]" class="form-control" id="comment"></textarea>
                </div>
              
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
        </div>
    </div>

    <% } %>

    <div class=" comment row offset-lg-2 offset-sm-2 offset-3">
         <!-- <div class="col col-8 offset-2"> -->
        <% for(let comm of list.reviews) { %>
            <div class="card col-lg-5 col-sm-10 mb-3 ms-3" >
                <div class="card-body">
                  <h5 class="card-title">@<%= comm.author.username %></h5><hr>
                    <p class="starability-result card-text" data-rating="<%= comm.rating %>">
                     
                    </p>
                  <p class="card-text"><%= comm.comment %></p>
                </div>
                <form method="post" class="mb-4" action="/listings/<%= list.id %>/Review/<%= comm.id %>?_method=DELETE">
                    <button class="btn btn-dark">Delete</button>
                </form>
              </div>
            <% } %>
      
         <!-- </div> -->
    </div>

