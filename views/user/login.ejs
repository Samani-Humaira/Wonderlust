<%- layout("./layout/Biolerplate.ejs") %>
<%- include("../includes/flash.ejs") %>
<body>
  <div class="d-flex flex-column min-vh-100"> <!-- Flex container -->
    <div>
      <div class="user">
        <h1 class="userActTitle">login for wonderlust</h1>
        <div class="row row-cols-lg-5">
          <div class="col col-lg-12">
            <form method="post" action="/login">
              <div class="mb-3">
                <label for="username" class="form-label">username</label>
                <input style="width: 100%;" required name="username" type="text" class="form-control" id="username">
                <div class="invalid-feedback">field required</div>
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">password</label>
                <input required name="password" type="password" class="form-control" id="password">
                <div class="invalid-feedback">field required</div>
              </div>
              <button type="submit" class="btn button">login</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
