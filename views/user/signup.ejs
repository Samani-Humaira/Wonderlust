<%- layout("./layout/Biolerplate.ejs") %>

<%- include("../includes/flash.ejs") %>
<body>
  <div class="d-flex flex-column min-vh-100">
  <div>
    <div class="user">
      <h1 class="userActTitle">Signup for wonderlust</h1>
  
  
  <form method="post" action="/signup" class="needs-validation" novalidate>
      <div class="mb-3">
          <label for="username" class="form-label">username</label>
          <input required name="username" type="text" class="form-control" id="username">
          <div class="invalid-feedback">
            field required
          </div>
        </div>
  
        <div class="mb-3">
          <label for="email" class="form-label">email</label>
          <input required name="email" type="email" class="form-control" id="email">
          <div class="invalid-feedback">
            field required
          </div>
        </div>
  
        <div class="mb-3">
          <label for="password" class="form-label">password</label>
          <input required name="password" type="password" class="form-control" id="password">
          <div class="invalid-feedback">
            field required
          </div>
          
        </div>
      <button type="submit" class="btn button">Submit</button>
    </form>
  </div>
    </div>
  </div>
  
</body>